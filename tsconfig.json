{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "resolveJsonModule": true
  },
  "include": ["./index.ts", "/src/**/*"],
  "exclude": ["./node_modules/**/*"]
}
