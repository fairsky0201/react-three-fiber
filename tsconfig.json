{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "emitDeclarationOnly": true,
    "outFile": "dist/types/index.d.ts"
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*"]
}
